# Backend Production Environment Variables
# Copy this to .env in production and update values

# JWT Secret Key (IMPORTANT: Change this in production!)
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-characters

# JWT Token Expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# API Configuration
API_TITLE=UniRec API
API_VERSION=1.0.0

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://uni-rec.vercel.app,http://localhost:3000,http://localhost:5173

# Database path (relative to backend folder)
USERS_DB_PATH=../data/users.json

# Models path (relative to backend folder)
MODELS_PATH=../models/
